---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title="Home" description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title="Home" />
		<main class="container lg:px-0 md:pb-20 md:px-8 sm:pb-16 sm:px-6 mx-auto px-7 py-10 pb-10 pt-24 l">
			<div class="m-center pt-10 pb-10">
				<div class="m-con text-xl px-6">
					Hello, welcome to {SITE_TITLE}!
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
